@{
  Layout = "_Layout";
}

@using LocalEats.Models;
@model List<LocalEats.Models.Cafe>;

<hr/>
<button>@Html.ActionLink("Add Cafe", "Create")</button>
<hr/>

@Model.Count

@if (@Model.Count == 0)
{
  <h3>...no cafes added yet</h3>
}

@foreach(Cafe cafe in Model)
{
  <li>@Html.ActionLink($"{cafe.CafeName}", "Details",  new {id = cafe.CafeId}) | @cafe.Cuisine.CuisineType</li>
}
