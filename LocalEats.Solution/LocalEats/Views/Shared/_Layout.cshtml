<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Local Eats</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script
  src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
  integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8="
  crossorigin="anonymous"></script>

  <script type="text/javascript" src="@Url.Content("~/scripts/MyScript.js")"></script>

  <script type="text/javascript" src="@Url.Content("~/scripts/SearchScript.js")"></script>

<link rel="stylesheet" href="~/css/SearchStyles.css">
    <link rel="stylesheet" href="~/css/styles.css">


    <style>
    .toggle>#choice1:checked~#flap>.content {
        transform: rotateY(-180deg);
    }

    .toggle>#choice2:checked~#flap {
        transform: rotateY(0deg);
    }

    .toggle>label {
        display: inline-block;
        min-width: 170px;
        padding: 30px;
        font-size: var(--font-size);
        text-align: center;
        color: var(--accent);
        cursor: pointer;
    }

    .toggle>label,
    .toggle>#flap {
        font-weight: bold;
        text-transform: capitalize;
    }

    .toggle>#flap {
        position: absolute;
        top: calc( 0px - var(--border-width));
        left: 50%;
        height: calc(100% + var(--border-width) * 2);
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: var(--font-size);
        background-color: var(--accent);
        border-top-right-radius: var(--border-radius);
        border-bottom-right-radius: var(--border-radius);
        transform-style: preserve-3d;
        transform-origin: left;
        transition: transform cubic-bezier(0.4, 0, 0.2, 1) .5s;
    }

    .toggle>#flap>.content {
        color: #333;
        transition: transform 0s linear .25s;
        transform-style: preserve-3d;
    }

    </style>


  </head>
  <body>

    <div class="jumbotron">
      <h1>@ViewBag.Title</h1>
    </div>

    <div class="container">
    <nav>
      <p>@Html.ActionLink("Home", "Index", "Home") | @Html.ActionLink("Cafes", "Index", "Cafes") | @Html.ActionLink("Cuisines", "Index", "Cuisines") | @Html.ActionLink("Search", "Search", "Searches")</p>
    </nav>



    @RenderBody()

  </div class="container">

  </body>
</html>
